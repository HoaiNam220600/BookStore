
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";

}
@model Admin.Models.ChiTietDonHang

<div class="right_col" role="main" style="min-height: 3753px;">
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Chi tiết đơn hàng</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    @using (Html.BeginForm("DetailDonHang", "Admin", FormMethod.Get, new { @class = "form-horizontal form-label-left" }))
                    {

                        <div class="form-group" >
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryId">
                                Mã Đơn hàng<span class="required" >*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12" >
                                @Html.TextBoxFor(m => m.MaDonHang, new { @class = "form-control  col-md-7 col-xs-12" , disabled = "disabled"  })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryName">
                                Mã Sách <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.MaSach, new { @class = "form-control  col-md-7 col-xs-12" , disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryName">
                                Số lượng <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control  col-md-7 col-xs-12" , disabled = "disabled" }) 
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryName">
                                Đơn giá<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.DonGia, new { @class = "form-control  col-md-7 col-xs-12", disabled = "disabled" })
                            </div>
                        </div>
                      
                        
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <a href="~/Admin/DonHang">Back</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>