@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model List<Admin.Models.Sach>

<section class="_1khoi sachmoi bg-white">
    <div class="container">
        <div class="noidung" style=" width: 100%;">
            <div class="row">
                <!--header-->
                <div class="col-12 d-flex justify-content-between align-items-center pb-2 bg-transparent pt-4">
                    <h1 class="header text-uppercase" style="font-weight: 400;">SÁCH VĂN HỌC VIỆT NAM</h1>
                    @Html.ActionLink("Xem tất cả", "GetBook", "User")
                </div>
            </div>
            <div class="khoisanpham" style="padding-bottom: 2rem;">
                @foreach (var item in Model)
                {
                    <div class="card slick-slide slick-current slick-active" tabindex="0" style="width: 335px;" role="tabpanel" id="slick-slide00" aria-describedby="slick-slide-control00" data-slick-index="0" aria-hidden="false">
                        <a href="@Url.Action("Detail",new {id = @item.MaSach})" class="motsanpham" style="text-decoration: none; color: black;" data-toggle="tooltip" data-placement="bottom" tabindex="0">
                            <img class="card-img-top anh" src="~/User/images/01.jpg">
                            <div class="card-body noidungsp mt-3">
                                <h3 class="card-title ten">@item.TenSach</h3>
                                @*<small class="tacgia text-muted"> @item.TenTacGia</small>*@
                                <div class="gia d-flex align-items-baseline">
                                    <div class="gia text-muted">@item.GiaBan</div>
                                </div>
                                <div class="danhgia">
                                    <ul class="d-flex" style="list-style: none;">
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><span class="text-muted">0 nhận xét</span></li>
                                    </ul>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
        <button class="slick-next slick-arrow" aria-label="Next" type="button" style="" aria-disabled="false">Next</button>
    </div>

</section>
